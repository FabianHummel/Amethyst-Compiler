FROM `amethyst:test` IMPORT complete;

{% for numeric_type in default_numeric_types %}
{% for arithmetic_operator in arithmetic_operators %}
[test]
function test_{{numeric_type.name}}_{{arithmetic_operator.name}}(
    x: {{numeric_type.type}}, 
    y: {{numeric_type.type}})
{
    var result = x {{arithmetic_operator.operator}} y;
    complete();
}
{% endfor %}
{% endfor %}

{% for arithmetic_operator in arithmetic_operators %}
[test]
function test_decimal2_integer_{{arithmetic_operator}}(
    x: dec(2),
    y: int)
{
    var result = x {{arithmetic_operator.operator}} y;
    complete();
}
{% endfor %}

{% for arithmetic_operator in arithmetic_operators %}
[test]
function test_boolean_integer_{{arithmetic_operator}}(
    x: bool,
    y: int)
{
    var result = x {{arithmetic_operator.operator}} y;
    complete();
}
{% endfor %}

{% for arithmetic_operator in arithmetic_operators %}
    [test]
    function test_decimal3_decimal1_{{arithmetic_operator}}(
    x: dec(3),
